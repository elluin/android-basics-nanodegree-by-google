<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/list_item_margin"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/list_item_margin"
    android:background="@color/colorPrimaryLight">

    <ImageView
        android:id="@+id/imageview_news_thumbnail"
        style="@style/thumbnail_style"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_section_name"
            style="@style/section_name_style"
            tools:text="Section name" />

        <TextView
            android:id="@+id/textview_title"
            style="@style/title_style"
            tools:text="Title" />

        <TextView
            android:id="@+id/textview_publication_date"
            style="@style/publication_date_style"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            tools:text="Publishing Date" />

    </LinearLayout>

</LinearLayout>