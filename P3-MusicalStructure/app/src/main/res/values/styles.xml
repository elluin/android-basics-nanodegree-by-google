<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style for Description of activity -->
    <style name="description_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for Now Playing Artist, Album, Song on top (info1 block) -->
    <style name="info1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for Now Playing info (info2 block) -->
    <style name="info2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@color/icons</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for Plus button -->
    <style name="plus_button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <!-- Style for Control buttons (play, next, previous) -->
    <style name="control_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Style for Album list and Song list) -->
    <style name="album_song_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@color/icons</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

</resources>
